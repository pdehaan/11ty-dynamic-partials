pagination:
  data: "books"
  size: 4
permalink: "books/{% if pagination.pageNumber != 0 %}{{ pagination.pageNumber | plus: 1 }}/{% endif %}"
layout: layouts/base
eleventyComputed:
  title: "Books (page {{ pagination.pageNumber | plus: 1 }} of {{ pagination.pages.length }})"
  tmpl: "layouts/{% if pagination.pageNumber == 0 %}featured{% else %}paginated{% endif %}_posts"
